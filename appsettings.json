{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "Jwt": {
    "Key": "${JWT_KEY}",
    "Issuer": "ControlGastosAPI",
    "Audience": "ControlGastosClients",
    "ExpirationMinutes": "60"
  },

  "ReverseProxy": {
    "Routes": {
      "auths-route": {
        "ClusterId": "auths-cluster",
        "Match": {
          "Path": "/Auths/{**catch-all}"
        }
      },

      "comercio-route": {
        "ClusterId": "comercio-cluster",
        "Match": {
          "Path": "/Comercios/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated"
      },

      "pedidos-route": {
        "ClusterId": "pedidos-cluster",
        "Match": {
          "Path": "/Pedidos/{**catch-all}"
        }
      },

      "productos-route": {
        "ClusterId": "productos-cluster",
        "Match": {
          "Path": "/Productos/{**catch-all}"
        }
      },

      "notificaciones-route": {
        "ClusterId": "notificaciones-cluster",
        "Match": {
          "Path": "/notificacionesHub/{**catch-all}"
        },
        "Transforms": [
          { "RequestHeader": "X-Forwarded-Proto", "Set": "https" }
        ]
      }
    },

    "Clusters": {
      "auths-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "${AUTHS_SERVICE_URL}"
          }
        }
      },

      "comercio-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "${COMERCIOS_SERVICE_URL}"
          }
        }
      },

      "pedidos-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "${PEDIDOS_SERVICE_URL}"
          }
        }
      },

      "productos-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "${PRODUCTOS_SERVICE_URL}"
          }
        }
      },

      "notificaciones-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "${NOTIFICACIONES_SERVICE_URL}"
          }
        }
      }
    }
  }
}