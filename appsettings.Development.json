{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "FRONTEND_URL": "http://localhost:5000",
  "InternalSecret": "",

  "Jwt": {
    "Key": "",
    "Issuer": "ControlGastosAPI",
    "Audience": "ControlGastosClients",
    "ExpirationMinutes": "60"
  },


  "ReverseProxy": {
    "Routes": {
      "auths-route": {
        "ClusterId": "auths-cluster",
        "Match": { "Path": "/Auths/{**catch-all}" }
      },
      "comercio-route": {
        "ClusterId": "comercio-cluster",
        "Match": { "Path": "/Comercios/{**catch-all}" },
        "AuthorizationPolicy": "authenticated"
      },
      "pedidos-route": {
        "ClusterId": "pedidos-cluster",
        "Match": { "Path": "/Pedidos/{**catch-all}" }
      },
      "notificaciones-route": {
        "ClusterId": "notificaciones-cluster",
        "Match": { "Path": "/notificacionesHub/{**catch-all}" }
      },
      "productos-route": {
        "ClusterId": "productos-cluster",
        "Match": { "Path": "/Productos/{**catch-all}" }
      }
    },
    "Clusters": {
      "auths-cluster": {
        "Destinations": {
          "destination1": { "Address": "https://localhost:5001/" }
        }
      },
      "comercio-cluster": {
        "Destinations": {
          "destination1": { "Address": "https://localhost:5002/" }
        }
      },
      "notificaciones-cluster": {
        "Destinations": {
          "destination1": { "Address": "https://localhost:5003/" }
        }
      },
      "pedidos-cluster": {
        "Destinations": {
          "destination1": { "Address": "https://localhost:5004/" }
        }
      },
      "productos-cluster": {
        "Destinations": {
          "destination1": { "Address": "https://localhost:5005/" }
        }
      }
    }
  }
}
